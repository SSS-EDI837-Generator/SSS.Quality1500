<UserControl x:Class="SSS.Quality1500.Presentation.Views.AboutUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SSS.Quality1500.Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:AboutViewModel , IsDesignTimeCreatable=True}"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Estilo para las etiquetas de información -->
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <!-- Estilo para los valores de información -->
        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>

    <Grid Cursor="Hand"  Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#FF2E3440" 
                Padding="20">
            <StackPanel Orientation="Horizontal" Background="Transparent" >
                <!-- Icono de la aplicación -->
                <Border Background="#FF4C566A" 
                        Width="64" 
                        Height="64" 
                        CornerRadius="8"
                        Margin="0,0,20,0">
                    <TextBlock Text="APP" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Información principal -->
                <StackPanel VerticalAlignment="Center" Background="Transparent">
                    <TextBlock Text="{Binding ApplicationName}" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" 
                               Foreground="#FFECEFF4" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Contenido principal -->
        <ScrollViewer Grid.Row="1" Background="Transparent"
                      VerticalScrollBarVisibility="Auto" 
                      Padding="30">
            <StackPanel>
                <TextBlock Text="Información de la Aplicación" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>

                <!-- Grid para información organizada -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Versión -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Versión:" 
                               Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               Text="{Binding Version}" 
                               Style="{StaticResource InfoValueStyle}"/>

                    <!-- Fecha de construcción -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Fecha de Build:" 
                               Style="{StaticResource InfoLabelStyle}"
                               Margin="0,10,10,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                               Text="{Binding BuildDate}" 
                               Style="{StaticResource InfoValueStyle}"
                               Margin="0,10,0,0"/>

                    <!-- Compañía -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Compañía:" 
                               Style="{StaticResource InfoLabelStyle}"
                               Margin="0,10,10,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                               Text="{Binding Company}" 
                               Style="{StaticResource InfoValueStyle}"
                               Margin="0,10,0,0"/>

                    <!-- Copyright -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Copyright:" 
                               Style="{StaticResource InfoLabelStyle}"
                               Margin="0,10,10,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                               Text="{Binding Copyright}" 
                               Style="{StaticResource InfoValueStyle}"
                               Margin="0,10,0,0"/>

                    <!-- Separador -->
                    <Separator Grid.Row="4" Grid.ColumnSpan="2" 
                              Margin="0,20"/>

                    <!-- Descripción detallada -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Descripción:" 
                               Style="{StaticResource InfoLabelStyle}"
                               VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" 
                               Text="{Binding Description}" 
                               Style="{StaticResource InfoValueStyle}"
                               TextWrapping="Wrap"/>
                </Grid>

                <!-- Información adicional -->
                <Border Background="#FFF5F5F5" 
                        CornerRadius="5" 
                        Padding="15" 
                        Margin="0,30,0,0">
                    <StackPanel Background="Transparent">
                        <TextBlock Text="Información Técnica" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="• Desarrollado usando WPF y .NET" 
                                   Margin="0,2"/>
                        <TextBlock Text="• Patrón arquitectónico: MVVM (Model-View-ViewModel)" 
                                   Margin="0,2"/>
                        <TextBlock Text="• Principios SOLID aplicados" 
                                   Margin="0,2"/>
                        <TextBlock Text="• Clean Code y mejores prácticas" 
                                   Margin="0,2"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#FFF8F9FA" 
                BorderBrush="#FFEFF1F3" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="{Binding Description,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" 
                       FontSize="12" 
                       Foreground="#FF6C757D" 
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
