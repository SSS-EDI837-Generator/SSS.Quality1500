<Window x:Class="SSS.Quality1500.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSS.Quality1500.Presentation.Views"
        xmlns:vm="clr-namespace:SSS.Quality1500.Presentation.ViewModels"
        
        xmlns:helpers="clr-namespace:SSS.Quality1500.Presentation.Helpers"
        helpers:WindowCloser.EnableWindowClosing="True"
        helpers:KeyPreviewKeyDown.EnableKeyPreviewKeyDown="True"
        helpers:MouseMove.EnableMouseMove="True"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel , IsDesignTimeCreatable=False}"
        Title="{Binding Title}" Height="1000" Width="1000" WindowStartupLocation="CenterScreen">

    
    <Grid Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Config" Command="{Binding ShowConfigCommand}" />
                <MenuItem Header="_Processing" Command="{Binding ShowProcessingCommand}" />
                <MenuItem Header="_ICD-10" Command="{Binding ShowIcd10Command}" />
                <MenuItem Header="_Ayuda" Command="{Binding ShowAboutCommand}" />
                <Separator />
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_Procesamiento">
                <MenuItem Header="_Processing" Command="{Binding ShowProcessingCommand}" />
            </MenuItem>
            <MenuItem Header="_Ayuda">
                <MenuItem Header="_About" Command="{Binding ShowAboutCommand}" />
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="5" />


        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
