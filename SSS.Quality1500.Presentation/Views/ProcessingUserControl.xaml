<UserControl x:Class="SSS.Quality1500.Presentation.Views.ProcessingUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SSS.Quality1500.Presentation.Views"
             xmlns:vm="clr-namespace:SSS.Quality1500.Presentation.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ProcessingViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="900"
             Background="{DynamicResource MaterialDesign.Brush.Background}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{Binding PageTitle}"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
            <TextBlock Text="Seleccione la carpeta y el archivo DBF, valide la estructura y procese los claims."
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       Foreground="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Path Selection -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                           Text="Carpeta de Base de Datos:"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0,0,0,8"/>

                <TextBox Grid.Row="1" Grid.Column="0"
                         Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Ruta de la carpeta..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         IsReadOnly="True"
                         Margin="0,0,8,0"/>

                <Button Grid.Row="1" Grid.Column="1"
                        Command="{Binding BrowseFolderCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="Seleccionar carpeta"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center"/>
                        <TextBlock Text="Examinar" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="2"
                        Command="{Binding RefreshFilesCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="Actualizar lista de archivos">
                    <materialDesign:PackIcon Kind="Refresh"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- File List -->
        <materialDesign:Card Grid.Row="2" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="16,12" Background="{DynamicResource MaterialDesign.Brush.Primary.Light}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Database"
                                                 VerticalAlignment="Center"
                                                 Foreground="White"
                                                 Width="24" Height="24"
                                                 Margin="0,0,12,0"/>

                        <TextBlock Grid.Column="1"
                                   Text="Archivos DBF Disponibles"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding AvailableFiles}"
                          SelectedItem="{Binding SelectedFile}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          materialDesign:DataGridAssist.CellPadding="12 8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="12 8">
                    <DataGrid.Columns>
                        <!-- File Name -->
                        <DataGridTemplateColumn Header="Archivo" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocument"
                                                                 VerticalAlignment="Center"
                                                                 Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding FileName}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- File Size -->
                        <DataGridTextColumn Header="Tamano"
                                            Binding="{Binding FileSize}"
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Last Modified -->
                        <DataGridTextColumn Header="Ultima Modificacion"
                                            Binding="{Binding LastModified}"
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Foreground.Light}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding AvailableFiles.Count, Converter={StaticResource InverseIsEmptyToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="FolderAlert"
                                             Width="64" Height="64"
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Foreground.Light}"
                                             Opacity="0.5"/>
                    <TextBlock Text="No hay archivos DBF"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource MaterialDesign.Brush.Foreground.Light}"/>
                    <TextBlock Text="Seleccione una carpeta que contenga archivos .DBF"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesign.Brush.Foreground.Light}"
                               Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Validation Results Panel -->
        <materialDesign:Card Grid.Row="3" Margin="0,16,0,0" Padding="16"
                             Visibility="{Binding ShowValidationResults, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <!-- Success State -->
                <Border Padding="12"
                        CornerRadius="4"
                        Background="#E8F5E9"
                        Visibility="{Binding ValidationPassed, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="CheckCircle"
                                                 Width="32" Height="32"
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,16,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Total Registros (Imagenes)"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Foreground="#666666"/>
                            <TextBlock Text="{Binding TotalRecords}"
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Foreground="#2E7D32"/>
                        </StackPanel>

                        <Border Grid.Column="2"
                                Width="1"
                                Background="#C8E6C9"
                                Margin="16,4"/>

                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                            <TextBlock Text="Total Reclamaciones"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Foreground="#666666"/>
                            <TextBlock Text="{Binding TotalClaims}"
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Foreground="#1565C0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="4"
                                                 Kind="FileDocumentCheck"
                                                 Width="24" Height="24"
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"
                                                 Margin="16,0,0,0"
                                                 ToolTip="Base de datos validada correctamente"/>
                    </Grid>
                </Border>

                <!-- Error State -->
                <Border Padding="12"
                        CornerRadius="4"
                        Background="#FFEBEE"
                        Visibility="{Binding ValidationPassed, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="AlertCircle"
                                                 Width="32" Height="32"
                                                 Foreground="#D32F2F"
                                                 VerticalAlignment="Top"
                                                 Margin="0,0,16,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Validacion Fallida"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Foreground="#D32F2F"/>
                            <TextBlock Text="{Binding ValidationErrorMessage}"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Missing Columns List -->
                        <ItemsControl Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding MissingColumns}"
                                      Margin="0,8,0,0"
                                      Visibility="{Binding MissingColumns.Count, Converter={StaticResource IsNotZeroToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Foreground="#B71C1C"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </materialDesign:Card>

        <!-- Processing Status -->
        <materialDesign:Card Grid.Row="4" Margin="0,16,0,0" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Status Message -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="InformationOutline"
                                             VerticalAlignment="Center"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Progress Bar (visible during processing or validation) -->
                <ProgressBar Grid.Row="1"
                             IsIndeterminate="{Binding IsValidating}"
                             Value="{Binding ProgressValue}"
                             Minimum="0" Maximum="100"
                             Height="8"
                             Margin="0,12,0,0">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsValidating}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>

                <!-- Processing Results Panel (visible after processing) -->
                <Border Grid.Row="2"
                        Margin="0,12,0,0"
                        Padding="12"
                        CornerRadius="4"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                        Visibility="{Binding ShowProcessingResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Total Procesados"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Foreground="White"
                                       Opacity="0.8"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalRecords}"
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                                Width="1"
                                Background="White"
                                Opacity="0.3"
                                Margin="16,0"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Con Errores"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Foreground="White"
                                       Opacity="0.8"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding RecordsWithErrors}"
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Foreground="#FFCDD2"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="3"
                                Content="Ver Errores"
                                Command="{Binding ViewErrorsCommand}"
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Foreground="White"
                                Margin="16,0,0,0"
                                Visibility="{Binding RecordsWithErrors, Converter={StaticResource IsNotZeroToVisibilityConverter}}"/>
                    </Grid>
                </Border>
            </Grid>
        </materialDesign:Card>

        <!-- Action Buttons -->
        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Foreground="{DynamicResource MaterialDesign.Brush.Foreground.Light}">
                <Run Text="Archivo seleccionado: "/>
                <Run Text="{Binding SelectedFile.FileName, Mode=OneWay, FallbackValue='Ninguno'}"
                     FontWeight="Medium"/>
            </TextBlock>

            <!-- Validate Button -->
            <Button Grid.Column="1"
                    Command="{Binding ValidateFileCommand}"
                    IsEnabled="{Binding HasValidSelection}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"
                    materialDesign:ButtonAssist.CornerRadius="4">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="DatabaseCheck"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Visibility="{Binding IsValidating, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <materialDesign:PackIcon Kind="Loading"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Visibility="{Binding IsValidating, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Validar" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!-- Process Button -->
            <Button Grid.Column="2"
                    Command="{Binding ProcessFileCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="4">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Play"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Visibility="{Binding IsProcessing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <materialDesign:PackIcon Kind="Loading"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Procesar Archivo" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
</UserControl>
